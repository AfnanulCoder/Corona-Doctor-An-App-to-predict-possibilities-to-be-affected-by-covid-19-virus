<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartingActivity"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:padding="20dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/options"
            android:onClick="OptionsButton"
            />

    </LinearLayout>




    <ImageView
        android:id="@+id/checkYourselfID"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/check_yourself"
        android:onClick="CheckYourselfButton"
        android:layout_centerInParent="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/checkYourselfID"
        android:padding="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.5"
            >

            <Button
                android:id="@+id/getReadyButtonID"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_colorful_shape"
                android:text="Get Ready for COVID-19?"
                android:textAllCaps="false"
                android:padding="20dp"
                android:onClick="HowToPrevent"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="0dp"/>


            <Button
                android:id="@+id/whatToDoButtonID"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_colorful_shape"
                android:text="What To Do if You Are Sick?"
                android:textAllCaps="false"
                android:padding="20dp"
                android:onClick="HowToGetHelp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/stayStressFreeID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_colorful_shape"
            android:layout_marginTop="20dp"
            android:text="Stay Stress-free"
            android:textAllCaps="false"
            android:padding="20dp"
            android:onClick="StayStressFree"
            />

    </LinearLayout>




</RelativeLayout>