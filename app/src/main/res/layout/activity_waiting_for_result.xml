<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaitingForResult"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/loading3ID"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/loading3"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/loading4ID"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/loading4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/loading5ID"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/loading5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="140dp"
            android:visibility="gone"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/waitingTvID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting For Result"
        android:textColor="#000000"
        android:background="@drawable/round_corner_colorful_shape"
        android:padding="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <ImageView
            android:id="@+id/loading1ID"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/loading1"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/loading2ID"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/loading2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            />

    </RelativeLayout>

</LinearLayout>